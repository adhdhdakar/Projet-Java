<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="488.0" prefWidth="648.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.StatsAdminController">
   <VBox alignment="TOP_CENTER" spacing="10.0" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">

      <!-- Barre de recherche -->
      <TextField fx:id="searchField" prefHeight="26.0" promptText="Rechercher un article..." />

      <!-- Tableau des statistiques -->
      <TableView fx:id="tableStats" prefHeight="400.0">
         <columns>
            <TableColumn fx:id="colArticle" prefWidth="314.0" text="Article" />
            <TableColumn fx:id="colTotalQuantite" prefWidth="313.0" text="Quantité vendue" />
         </columns>
      </TableView>

      <!-- Info -->
      <Label text="Les données sont triées par articles les plus vendus." />
   </VBox>
</AnchorPane>
