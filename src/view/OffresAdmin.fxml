<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="522.0" prefWidth="549.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminController">
   <VBox spacing="10.0" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">

      <!-- Barre de recherche -->
      <TextField fx:id="searchOfferField" promptText="Rechercher une offre..." />

      <!-- Tableau des offres -->
      <TableView fx:id="tableOffres" prefHeight="250.0" prefWidth="680.0">
         <columns>
            <TableColumn prefWidth="130.0" text="Nom de l'offre" />
            <TableColumn prefWidth="89.0" text="Réduction" />
            <TableColumn prefWidth="162.0" text="Date de début" />
            <TableColumn prefWidth="139.0" text="Date de fin" />
         </columns>
      </TableView>

      <!-- Formulaire de saisie/modification -->
      <VBox spacing="5.0">
         <TextField fx:id="nomOffreField" promptText="Nom de l'offre" />
         <TextField fx:id="reductionField" promptText="Réduction (%) ou montant" />
         <HBox spacing="10">
            <DatePicker fx:id="dateDebutPicker" promptText="Date de début" />
            <DatePicker fx:id="dateFinPicker" promptText="Date de fin" />
         </HBox>
         <TextArea fx:id="descriptionArea" prefRowCount="3" promptText="Description de l'offre" />
      </VBox>

      <!-- Boutons d'action -->
      <HBox alignment="CENTER" prefWidth="602.0" spacing="10.0">
         <Button fx:id="btnAjouterOffre" text="Ajouter" />
         <Button fx:id="btnModifierOffre" text="Modifier" />
         <Button fx:id="btnSupprimerOffre" text="Supprimer" />
      </HBox>
   </VBox>
</AnchorPane>
