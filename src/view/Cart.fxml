<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.CartController"
            style="-fx-background-color: #f5f5f5;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 20 0 10 0;">
            <children>
                <Button text="← Retour"
                        onAction="#handleReturn"
                        style="-fx-font-size: 14px;"/>
                <Label text="🛒 Mon Panier"
                       style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            </children>
        </HBox>
    </top>

    <center>
        <FlowPane fx:id="cardContainer"
                  hgap="20"
                  vgap="20"
                  style="-fx-background-color: transparent; -fx-padding: 20;" />
    </center>

    <bottom>
        <HBox spacing="20"
              alignment="CENTER_RIGHT"
              BorderPane.alignment="CENTER"
              style="-fx-padding: 10 20;">
            <children>
                <Label fx:id="totalLabel"
                       text="Total : 0,00 €"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Button text="Valider la commande"
                        onAction="#handleCheckout"
                        style="-fx-font-size: 14px; -fx-padding: 8 15;"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>