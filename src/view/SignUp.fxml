<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane style="-fx-background-color: #fdf6f0;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SignUpController">
   <children>
      <VBox alignment="CENTER" prefWidth="350.0" spacing="30.0" style="-fx-background-color: white;                      -fx-background-radius: 15;                      -fx-padding: 30;                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0, 4);">
         <children>

            <!-- Logo central agrandi -->
            <ImageView fitHeight="262.0" fitWidth="299.0" preserveRatio="true">
               <image>
                  <Image url="@/images/logoDarkShop.png" />
               </image>
            </ImageView>

            <!-- Titre Inscription -->
            <Label style="-fx-font-size: 20px;                           -fx-font-weight: bold;                           -fx-text-fill: #333;" text="Inscription" />

            <!-- Prénom -->
            <VBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Label text="Prénom" />
                  <TextField fx:id="prenomField" prefWidth="250.0" promptText="Entrez votre prénom" style="-fx-background-radius: 8;                                     -fx-padding: 6;" />
               </children>
            </VBox>

            <!-- Nom -->
            <VBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Label text="Nom" />
                  <TextField fx:id="nomField" prefWidth="250.0" promptText="Entrez votre nom" style="-fx-background-radius: 8;                                     -fx-padding: 6;" />
               </children>
            </VBox>

            <!-- Email -->
            <VBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Label text="Email" />
                  <TextField fx:id="emailField" prefWidth="250.0" promptText="Entrez votre email" style="-fx-background-radius: 8;                                     -fx-padding: 6;" />
               </children>
            </VBox>

            <!-- Mot de passe -->
            <VBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Label text="Mot de passe" />
                  <PasswordField fx:id="mdpField" prefWidth="250.0" promptText="Entrez votre mot de passe" style="-fx-background-radius: 8;                                         -fx-padding: 6;" />
               </children>
            </VBox>

            <!-- Bouton Créer un compte -->
            <Button fx:id="signUpButton" onAction="#handleSignUp" prefWidth="180.0" style="-fx-background-color: #e67e22;                            -fx-text-fill: white;                            -fx-background-radius: 8;                            -fx-font-weight: bold;" text="Créer un compte" />

            <!-- Bouton Retour -->
            <Button onAction="#handleRetour" style="-fx-background-color: transparent;                            -fx-text-fill: #666;                            -fx-underline: true;" text="Retour" />

         </children>
      </VBox>
   </children>
</StackPane>
