<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainPageController">

    <top>
        <MenuBar>
            <menus>
                <Menu text="Accueil">
                    <items>
                        <MenuItem text="Accueil" fx:id="accueilItem" onAction="#goAccueil" />
                    </items>
                </Menu>
                <Menu text="Mon Panier">
                    <items>
                        <MenuItem text="Mon Panier" fx:id="panierItem" onAction="#goPanier" />
                    </items>
                </Menu>
                <Menu text="Mon Compte">
                    <items>
                        <MenuItem text="Mon Compte" fx:id="compteItem" onAction="#goCompte" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
        <AnchorPane fx:id="contentArea" />
    </center>

</BorderPane>
