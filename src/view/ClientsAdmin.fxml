<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="536.0" prefWidth="564.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminController">
   <VBox spacing="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">

      <!-- Recherche -->
      <TextField fx:id="searchClientField" prefHeight="26.0" prefWidth="587.0" promptText="Rechercher un client..." />

      <!-- Tableau des clients -->
      <TableView fx:id="tableClients" prefHeight="242.0" prefWidth="570.0">
         <columns>
            <TableColumn fx:id="colNom" prefWidth="106.0" text="Nom" />
            <TableColumn fx:id="colPrenom" prefWidth="130.0" text="Prénom" />
            <TableColumn fx:id="colEmail" minWidth="0.0" prefWidth="176.0" text="Email" />
            <TableColumn fx:id="colTelephone" prefWidth="131.0" text="Téléphone" />
         </columns>
      </TableView>

      <!-- Formulaire client -->
      <VBox spacing="5.0">
         <TextField fx:id="nomField" promptText="Nom" />
         <TextField fx:id="prenomField" promptText="Prénom" />
         <TextField fx:id="emailField" promptText="Email" />
         <TextField fx:id="telephoneField" promptText="Téléphone" />
         <TextArea fx:id="adresseArea" prefRowCount="2" promptText="Adresse" />
      </VBox>

      <!-- Boutons d'action -->
      <HBox alignment="CENTER" prefHeight="46.0" prefWidth="619.0" spacing="10.0">
         <Button fx:id="btnAjouterClient" text="Ajouter" />
         <Button fx:id="btnModifierClient" text="Modifier" />
         <Button fx:id="btnSupprimerClient" text="Supprimer" />
      </HBox>
   </VBox>
</AnchorPane>
