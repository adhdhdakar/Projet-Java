<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.HistoriqueController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #fff9f0;">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30" />
    </padding>

    <Label text="Historique des commandes"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ff6600;" />

    <ListView fx:id="commandeList" prefWidth="500" prefHeight="300" />

    <Button text="Retour"
            onAction="#handleRetour"
            style="-fx-background-color: transparent; -fx-text-fill: #666; -fx-underline: true;" />
</VBox>
