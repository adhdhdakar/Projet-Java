<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.TypesAdminController"
            prefWidth="600" prefHeight="400">
    <children>
        <VBox spacing="10"
              AnchorPane.topAnchor="10"
              AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10"
              AnchorPane.bottomAnchor="10">
            <TableView fx:id="tableTypes" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colNomType"
                                 text="Type"
                                 prefWidth="600" />
                </columns>
            </TableView>

            <!-- Boutons d'action -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Ajouter"  onAction="#handleAjouter"/>
                <Button text="Modifier" onAction="#handleModifier"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>