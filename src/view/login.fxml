<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="698.0" prefWidth="576.0" style="-fx-background-color: #fdf6f0;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <children>
        <VBox alignment="CENTER" prefWidth="350.0" spacing="30.0" style="-fx-background-color: white;                      -fx-background-radius: 15;                      -fx-padding: 30;                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0, 4);">
            <children>

                <!-- Logo central agrandi -->
                <ImageView fitHeight="312.0" fitWidth="322.0" preserveRatio="true">
                    <image>
                        <Image url="@/images/logoDarkShop.png" />
                    </image>
                </ImageView>

                <!-- Titre de connexion -->
                <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Connexion" />

                <!-- Champ Email -->
                <VBox spacing="8.0">
                    <children>
                        <Label text="Email" />
                        <TextField fx:id="emailField" alignment="TOP_LEFT" prefHeight="29.0" prefWidth="346.0" promptText="Entrez votre email" style="-fx-background-radius: 8; -fx-padding: 6;" />
                    </children>
                </VBox>

                <!-- Champ Mot de passe -->
                <VBox alignment="CENTER_LEFT" prefHeight="46.0" prefWidth="46.0" spacing="8.0">
                    <children>
                        <Label text="Mot de passe" />
                        <PasswordField fx:id="passwordField" prefWidth="250.0" promptText="Entrez votre mot de passe" style="-fx-background-radius: 8; -fx-padding: 6;" />
                    </children>
                </VBox>

                <!-- Message d'erreur -->
                <Label fx:id="messageLabel" style="-fx-text-fill: red;" text="" />

                <!-- Boutons -->
                <Button fx:id="loginButton" prefWidth="180.0" style="-fx-background-color: #e67e22;                                -fx-text-fill: white;                                -fx-background-radius: 8;                                -fx-font-weight: bold;" text="Se connecter" />

                <Button fx:id="signupButton" prefWidth="180.0" style="-fx-background-color: transparent;                                -fx-text-fill: #e67e22;                                -fx-border-color: #e67e22;                                -fx-border-radius: 8;                                -fx-font-weight: bold;" text="S'inscrire" />

            </children>
        </VBox>
    </children>
</StackPane>
