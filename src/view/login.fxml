<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controller.LoginController"
           style="-fx-background-color: #fdf6f0;">
    <children>
        <VBox alignment="CENTER" spacing="15.0" prefWidth="350.0"
              style="-fx-background-color: white;
                     -fx-background-radius: 15;
                     -fx-padding: 30;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0, 4);">
            <children>

                <!-- Logo + nom de l'app -->
                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <ImageView fitHeight="40" preserveRatio="true">
                            <image>
                                <Image url="@/images/logoDarkShop.png" />
                            </image>
                        </ImageView>
                        <Label text="DarkShop"
                               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333;" />
                    </children>
                </HBox>

                <!-- Titre de connexion -->
                <Label text="Connexion"
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;" />

                <!-- Champ Email (plus étroit) -->
                <VBox spacing="8.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Email" />
                        <TextField fx:id="emailField"
                                   promptText="Entrez votre email"
                                   prefWidth="250.0"
                                   style="-fx-background-radius: 8; -fx-padding: 6;" />
                    </children>
                </VBox>

                <!-- Champ Mot de passe (plus étroit) -->
                <VBox spacing="8.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Mot de passe" />
                        <PasswordField fx:id="passwordField"
                                       promptText="Entrez votre mot de passe"
                                       prefWidth="250.0"
                                       style="-fx-background-radius: 8; -fx-padding: 6;" />
                    </children>
                </VBox>

                <!-- Message d'erreur -->
                <Label fx:id="messageLabel"
                       text=""
                       style="-fx-text-fill: red;" />

                <!-- Boutons -->
                <Button fx:id="loginButton"
                        text="Se connecter"
                        prefWidth="180.0"
                        style="-fx-background-color: #e67e22;
                               -fx-text-fill: white;
                               -fx-background-radius: 8;
                               -fx-font-weight: bold;" />

                <Button fx:id="signupButton"
                        text="S'inscrire"
                        prefWidth="180.0"
                        style="-fx-background-color: transparent;
                               -fx-text-fill: #e67e22;
                               -fx-border-color: #e67e22;
                               -fx-border-radius: 8;
                               -fx-font-weight: bold;" />

            </children>
        </VBox>
    </children>
</StackPane>