<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controller.LoginController"
           style="-fx-background-color: #fdf6f0;">
    <children>
        <VBox alignment="CENTER" spacing="20.0" prefWidth="400.0"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.5, 0, 4);">
            <children>

                <Label text="Connexion" style="-fx-font-size: 26px; -fx-font-weight: bold;" />

                <VBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Email" />
                        <TextField fx:id="emailField" promptText="Entrez votre email" prefWidth="300.0"
                                   style="-fx-background-radius: 8; -fx-padding: 8;" />
                    </children>
                </VBox>

                <VBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Mot de passe" />
                        <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe" prefWidth="300.0"
                                       style="-fx-background-radius: 8; -fx-padding: 8;" />
                    </children>
                </VBox>

                <Label fx:id="messageLabel" text="" style="-fx-text-fill: red;" />

                <Button fx:id="loginButton" text="Se connecter" prefWidth="200.0"
                        style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold;" />

                <Button fx:id="signupButton" text="S'inscrire" prefWidth="200.0"
                        style="-fx-background-color: transparent; -fx-text-fill: #e67e22; -fx-border-color: #e67e22; -fx-border-radius: 8; -fx-font-weight: bold;" />

            </children>
        </VBox>
    </children>
</StackPane>
